<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li>
  <% if page.current? %>
    <%= link_to page, "javascript:void(0)", opts = {:class => "current", :title => page, :remote => remote, :rel => page.next? ? 'next' : page.prev? ? 'prev' : nil} %>
  <% else %>
    <%= link_to page, url, opts = {:title => page, :remote => remote, :rel => page.next? ? 'next' : page.prev? ? 'prev' : nil} %>
  <% end %>
</li>