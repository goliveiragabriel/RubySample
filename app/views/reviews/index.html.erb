<% title "Recomendações de #{@user.first_name}" %>
<div class="content-wrapper">
  <div class="content">
    <div class="form-wrapper">
      <section id="reviews">
        <!-- <%= render @reviews %> -->
        <% reviews = @user.public_reviews %>
        <%= render :partial => "shared/reviews", :collection => reviews, :locals => {:type => "collection"} %>
        <%= link_to 'Back', :back, class: "back-button button-link" %>
      </section>
    </div>
  </div>
  <%= render 'layouts/sidebar' %>
</div>

<% if false %>
  <table>
    <tr>
      <th>User</th>
      <th>Vendor</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @reviews.each do |review| %>
    <tr>
      <td><%= review.user_id %></td>
      <td><%= review.vendor_id %></td>
      <td><%= review.content %></td>
      <td><%= link_to 'Show', review %></td>
      <td><%= link_to 'Edit', edit_review_path(review) %></td>
      <td><%= link_to 'Destroy', review, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Review', new_review_path %>
<% end %>