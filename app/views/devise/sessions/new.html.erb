<% title "Login" %>

<% unless params[:popup]%>
  <%= render 'layouts/header' %>
<% end %>

<div id="login-box" class="<%= params[:popup] ? "popup" : "regular" %>"><div class="form-wrapper">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {id: "login-form"}) do |f| %>
  
    <div class="form-row clearfix">
      <%= f.label :email %>
      <span class="input-shadow"><%= f.text_field :email, {placeholder: "email", autocomplete: "off", class: "required"} %></span>
    </div>
    <div class="form-row clearfix">
      <%= link_to "Esqueceu a sua senha?", new_password_path(resource_name, popup: 1), class: "forgot-password" %>
      <%= f.label :password, "Senha" %>
      <span class="input-shadow"><%= f.password_field :password, {placeholder: "senha", autocomplete: "off", class: "required"} %></span>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="form-row inline-label clearfix">
        <%= f.check_box :remember_me %> <%= f.label :remember_me, "Mantenha-me conectado" %>
      </div>
    <% end -%>

    <%= hidden_field_tag 'popup', '1' %>

    <div class="form-row row-submit clearfix">
      <%= f.submit "Entrar", class: "login" %>
      <small>ou</small>
      <a href="<%= user_omniauth_authorize_path(:facebook) %>" title="Facebook" class="facebook">Login com Facebook</a>
    </div>

  <% end %>
</div></div>

<% unless params[:popup] %>
  <div class="footer-wrapper login">
    <footer>
    <nav>
      <ul class="clearfix">
        <li><a href="mailto:contato@bemcasados.art.br" target="_blank">Anunciantes</a></li>
        <li><%= link_to "Sobre a empresa", about_us_path %></li>
        <li><a href="mailto:contato@bemcasados.art.br" target="_blank">Contato</a></li>
        <li>Termos de uso</li>
        <li class="copyright">Copyright &#169; 2012, Bem Casados. Todos os direitos reservados.</li>
      </ul>
    </nav>
    </footer>
  </div>
<% end %>