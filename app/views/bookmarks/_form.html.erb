<div class="content-wrapper">
  <div class="content-iframe" id="bookmark">
    <div class="form-wrapper">
			<%= form_for([@user, @bookmark]) do |f| %>
			  <%= f.error_messages %>

          <div class="form-row clearfix">
            <%= f.label :comments,  "Se desejar, adicione um comentÃ¡rio no campo abaixo antes de salvar" %>
            <span class="input-shadow"><%= f.text_area :comments %></span>
          </div>
          <%= f.hidden_field :bookmarkable_id %>
          <%= f.hidden_field :bookmarkable_type %>
			  	<%= hidden_field_tag("vendor_id", params[:vendor_id]) if params[:vendor_id] %>
          <%= hidden_field_tag("dress_id", params[:dress_id]) if params[:dress_id] %>
    
          <div class="form-row">
            <%= f.submit "Salvar" %>
          </div>

			<% end %>
		</div>
	</div>
</div>