<div class="content-wrapper">
  <div class="content-iframe">
    <div class = "appointment-wrapper">
      <%= form_for(@appointment) do |f| %>
        <% if @appointment.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

            <ul>
            <% @appointment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      <h2> Agende sua visita</h2>
      <h6> Clique e Selecione um hor√°rio </h6>
        <div class="field">
          <%= f.text_field :data, class: "timepicker required" %>
        </div><br/>
        <div class="field">
          <h6>Telefone</h6>
          <%= f.text_field :telephone, class: "required" %>
        </div><br/>
        <div class="actions form-row">
          <%= f.submit "Agendar"  %>
        </div>
        <div class="field">
          <%= f.hidden_field :dress_id, :value => params[:dress_id] %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
          <%= f.hidden_field :vendor_id, :value => params[:vendor_id] %>
        </div>
      <% end %>
    </div>
  </div>
</div>