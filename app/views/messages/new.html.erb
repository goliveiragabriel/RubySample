<div class="content-wrapper">
  <div class="content-iframe">
    <div class="form-wrapper">
      <%= form_for @message do |f| %>
        <%= f.error_messages %>

        <div class="form-row clearfix">
          <%= f.label :email, "Digite seu email" %><br />
          <span class="input-shadow-long"><%= f.text_field :email, class:"long" %></span>
        </div>

        <div class="form-row clearfix">
          <%= f.label :content, "ConteÃºdo" %><br />
          <span class="input-shadow-long"><%= f.text_area :content, class:"long" %></span>
        </div>

        <%= f.hidden_field :type %>
        <%= hidden_field_tag :vid, @vendor.id %>
        <%= hidden_field_tag :nome_fantasia, @vendor.name %>

        <div class="form-row">
          <%= f.submit "Enviar" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
