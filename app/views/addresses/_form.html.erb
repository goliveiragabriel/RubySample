<%= form_for([@vendor.becomes(Vendor), @address]) do |f| %>
  <%= f.error_messages %>

  <%= f.hidden_field :vendor_id %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :street %><br />
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :complement, "Complemento" %><br />
    <%= f.text_field :complement %>
  </div>
  <div class="field">
    <%= f.label :district, "Bairro" %><br />
    <%= f.text_field :district %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode %>
  </div>
  <div class="field">
    <%= f.label :phone1 %><br />
    <%= f.text_field :phone1 %>
  </div>
  <div class="field">
    <%= f.label :phone2 %><br />
    <%= f.text_field :phone2 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
